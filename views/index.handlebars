<div class="navbar-fixed">
    <nav>
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">News Scraper</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/">Home</a></li>
                <li><a href="/saved">Saved Articles</a></li>
                <li><a id="btnScrape" class="waves-effect waves-light btn">SCRAPE NEW ARTICLES!</a></li>
            </ul>
        </div>
    </nav>
</div>
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card large">
                <!-- Card Content -->
                <div class="card-image">
                    <img src="/images/newspaper.jpg">
                    <span class="card-title black-text">News Scraper</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        {{#each Article}}
        <div class="col s12 m6">
            <div class="card left">
                <div class="card-image">
                    <img src="images/newspaper.jpg">
                    <span class="card-title black-text">{{ title }} {{saved}}</span>
                    {{#if saved}}

                    <a data-id="{{id}}" class="remove btn-floating halfway-fab waves-effect waves-light red"><i
                            class="material-icons">remove</i></a>
                    {{else}}
                    <a data-id="{{id}}" class="add btn-floating halfway-fab waves-effect waves-light green"><i
                            class="material-icons">add</i></a>
                    {{/if}}
                </div>
                <div class="card-action">
                    <a href="{{ link }}" class="waves-effect waves-light btn-small black">Read<i
                            class="material-icons right">open_in_browser</i></a>
                    {{#if saved}}
                    <a data="{{id}}" href="#modal1" class="waves-effect waves-light btn-small blue modal-trigger">Comment<i
                            class="material-icons right">note_add</i></a>
                    {{/if}}
                </div>

            </div>
        </div>
        {{/each}}
    </div>
</div>
<footer class="page-footer">
    <div class="footer-copyright">
        <div class="container">
            News Scraper
        </div>
    </div>
</footer>

<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>Comments For Article: <span id="article-id"></span></h4>
        <ul class="collection with-header">  
      </ul>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="textarea1" class="materialize-textarea"></textarea>
                        <label for="textarea1">Comment</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" id="btnSaveComment" class="modal-close waves-effect waves-green btn-flat">Save</a>
    </div>
</div>